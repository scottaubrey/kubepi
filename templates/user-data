#cloud-config

## Set hostname
hostname: $hostname.$NODE_DOMAIN

users:
  - default
  - name: $user_username
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo, users, admin
    # lock_passwd: true
    lock_passwd: false
    passwd: crypt-compatible-password-hash-here
    ssh_pwauth: false
    shell: /bin/bash
    ssh_import_id: None
    ssh_authorized_keys:
      - "$user_ssh_pub_key"

ssh_pwauth: false

groups:
  - ubuntu: [root, sys]

package_update: false
package_upgrade: false
apt:
  sources:
    kubernetes:
      source: 'deb https://pkgs.k8s.io/core:/stable:/v1.28/deb/ /'
